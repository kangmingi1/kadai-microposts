<% unless current_user == user %>
  <% if current_user.likeing?(user) %>
    <%= form_for(current_user.likeusers.find_by(like_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :like_id, user.id %>
      <%= f.submit 'お気に入り取り消し', class: 'btn btn-warning btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.likeusers.build) do |f| %>
      <%= hidden_field_tag :like_id, user.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-success btn-block' %>
    <% end %>
  <% end %>
<% end %>